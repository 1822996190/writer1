<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.writer1.entity">
    <insert id="addMessages" parameterType="java.util.Map">
        insert into ${tableName} (sid,message,comment)
        values (#{sid},#{message},#{comment})
    </insert>
    <select id="queryMessages" parameterType="java.util.Map" resultType="Messages">
        select id,comment,message from ${tableName} where isRead=0
    </select>
    <update id="readMessages" parameterType="java.util.Map">
        update ${tableName} set isRead=1 where id= #{id}
    </update>
    <update id="readAllMessages" parameterType="java.util.Map">
        update ${tableName} set isRead=1 where isRead=0
    </update>
    <select id="countNotRead" parameterType="java.util.Map" resultType="int">
        select count(id) from ${tableName} where isRead=0
    </select>
</mapper>